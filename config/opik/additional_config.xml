<clickhouse>
    <macros>
        <shard>1</shard>
        <replica>localhost</replica>
        <cluster>cluster</cluster>
    </macros>

    <zookeeper>
        <node>
            <host>localhost</host>
            <port>2181</port>
        </node>
    </zookeeper>

    <zookeeper_path>/clickhouse</zookeeper_path>
    <zookeeper_session_timeout_ms>30000</zookeeper_session_timeout_ms>

    <!-- Distributed DDL disabled for single-node pod deployment -->
    <!-- <distributed_ddl>
        <path>/clickhouse/task_queue/ddl</path>
    </distributed_ddl> -->

    <remote_servers>
        <cluster>
        <shard>
            <replica>
            <host>localhost</host>
            <port>9000</port>
            </replica>
        </shard>
        </cluster>
    </remote_servers>
</clickhouse>