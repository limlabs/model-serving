[Unit]
Description=Nginx Reverse Proxy with SSL Termination
After=network-online.target
Wants=network-online.target

[Container]
Image=docker.io/library/nginx:alpine
ContainerName=nginx-proxy
Volume=/var/lib/llm-services/nginx/nginx.conf:/etc/nginx/nginx.conf:ro
Volume=/var/lib/llm-services/nginx/conf.d:/etc/nginx/conf.d:ro
Volume=/var/lib/llm-services/ssl:/etc/nginx/ssl:ro
Volume=/var/lib/llm-services/nginx/dist:/var/lib/llm-services/nginx/dist:ro
# Use host network to access vllm/webui on localhost
# Runs as system service (rootful podman) to bind privileged ports 80/443
Network=host

[Service]
Restart=always
TimeoutStartSec=60

[Install]
WantedBy=multi-user.target
