[Unit]
Description=DNSmasq Nameserver for liminati.internal
After=network-online.target
Wants=network-online.target

[Container]
Image=docker.io/jpillora/dnsmasq:latest
ContainerName=dnsmasq
Volume=/var/lib/vllm/dnsmasq/dnsmasq.conf:/etc/dnsmasq.conf:ro
Environment=HTTP_USER=admin
Environment=HTTP_PASS=admin
PodmanArgs=--network=host

[Service]
Restart=always
TimeoutStartSec=60

[Install]
WantedBy=default.target
